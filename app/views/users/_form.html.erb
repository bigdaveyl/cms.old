<%= form_for(@user, html: { multipart: true }) do |f| %>
  <%= render "shared/error_messages", :target => @user %>

  <div class="field">
    <%= f.label :biography %><br />
    <%= f.text_area :biography, :cols => "80", :rows => "20" %><br />
  </div>

  <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %><br />
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
