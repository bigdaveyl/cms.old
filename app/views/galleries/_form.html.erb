<%= form_for(@gallery) do |f| %>
  <% if @gallery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gallery.errors.count, "error") %> prohibited this gallery from being saved:</h2>

      <ul>
      <% @gallery.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <h4>New Files</h4>

  <%= f.fields_for :galleryphotos do |asset_fields| %>
    <% if asset_fields.object.new_record? %>
      <p><%= asset_fields.file_field :photo %></p>
    <% end %>

  <% end %>

  <h4>Old Files</h4>

  <%= f.fields_for :galleryphotos do |asset_fields| %>
    <% unless asset_fields.object.new_record? %>
      <div class="thumb">
        <%= link_to image_tag(asset_fields.object.photo.url(:thumb)), asset_fields.object.photo.url(:original) %>
        <%= asset_fields.check_box :_destroy %>
       </div>
    <% end %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
