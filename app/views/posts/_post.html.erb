<h1><%= link_to_unless_current(post.title, post) %></h1>
by <%= post.user.username %> <%= post.created_at.strftime("on %A, %B %d %Y at %H:%M:%S %Z") %><br />
<br />

<p>
<%= raw post.body%>
</p>

<table border="0">
  <tr>
    <td><g:plusone count="false"></g:plusone></td>
  </tr>
</table>

<% if can? :update, post %>
    <%= link_to 'Edit', edit_post_path(post) %> |
<% end %>
<% if can? :delete, post %>
    <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
<% end %>
