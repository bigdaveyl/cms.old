<%= form_for(@post) do |f| %>
  <%= render "shared/error_messages", :target => @post %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :id => "textile", :cols => "80", :rows => "20" %>
  </div>

  <%= f.hidden_field :user_id , :value => current_user.id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
