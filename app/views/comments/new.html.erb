<h3>Add a comment</h3>
<%= form_for(@comments.build) do |f| %>
 <div class="field">
    <%= f.label "Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body,  cols: 50, rows: 15 %>
  </div>
  <div class="actions">
    <%= f.submit "Add Comment!" %>
  </div>
<% end %>
